<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.projectmusica.viewcontroller.EstudianteViewController"
            prefWidth="700" prefHeight="500">

    <top>
        <Label text="Panel del Estudiante"
               style="-fx-font-size: 22px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER" style="-fx-padding: 25;">

            <HBox spacing="10" alignment="CENTER">
                <Label text="Cursos disponibles:"/>
                <ComboBox fx:id="cbCursos" prefWidth="250"/>
                <Button text="Inscribirse" onAction="#onInscribirse"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER">
                <Label text="Mis cursos:"/>
                <ComboBox fx:id="cbMisCursos" prefWidth="250"/>
                <Button text="Cancelar" onAction="#onCancelarCurso"/>
            </HBox>

            <Button text="Consultar horario"
                    onAction="#onConsultarHorario"
                    style="-fx-font-size: 15px;"/>

            <Label text="Salida:" style="-fx-font-weight: bold;"/>

            <TextArea fx:id="txtSalida"
                      prefHeight="230" prefWidth="500"
                      wrapText="true"/>

        </VBox>
    </center>

</BorderPane>