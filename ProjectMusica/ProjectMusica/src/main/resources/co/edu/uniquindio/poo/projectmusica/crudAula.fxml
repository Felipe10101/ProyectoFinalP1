<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.projectmusica.viewcontroller.crudAulaViewController"
            prefWidth="700" prefHeight="500">

    <top>
        <Label text="CRUD Aulas"
               style="-fx-font-size: 20px; -fx-padding: 10; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="12" padding="15">

            <HBox spacing="10">
                <Label text="Nombre:"/>
                <TextField fx:id="txtNombre" prefWidth="200"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Capacidad:"/>
                <TextField fx:id="txtCapacidad" prefWidth="120"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Estado (0.0 a 1.0):"/>
                <TextField fx:id="txtEstado" prefWidth="120"/>
            </HBox>

            <HBox spacing="15">
                <Button text="Crear" onAction="#crearAula"/>
                <Button text="Actualizar" onAction="#actualizarAula"/>
                <Button text="Eliminar" onAction="#eliminarAula"/>
                <Button text="Volver" onAction="#volver"/>
            </HBox>

            <TableView fx:id="tablaAulas" prefHeight="300">
                <columns>
                    <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                    <TableColumn fx:id="colCapacidad" text="Capacidad" prefWidth="120"/>
                    <TableColumn fx:id="colEstado" text="Estado" prefWidth="120"/>
                </columns>
            </TableView>

        </VBox>
    </center>
</BorderPane>