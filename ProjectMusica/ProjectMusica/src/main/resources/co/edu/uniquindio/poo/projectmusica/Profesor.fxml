<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane prefWidth="700" prefHeight="500"
            xmlns="http://javafx.com/javafx/"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="co.edu.uniquindio.poo.projectmusica.viewcontroller.ProfesorViewController">

    <top>
        <Label text="Panel del Profesor"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="12" padding="20">

            <HBox spacing="10">
                <Label text="Curso:"/>
                <ComboBox fx:id="cbCursos" prefWidth="250"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Comentario:"/>
                <TextField fx:id="txtComentario" prefWidth="300"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Nota:"/>
                <TextField fx:id="txtNota" prefWidth="100"/>
            </HBox>

            <HBox spacing="10">
                <Label text="Fecha:"/>
                <DatePicker fx:id="dpFecha"/>
            </HBox>

            <Button text="Crear Reporte"
                    onAction="#onCrearComentario"
                    style="-fx-font-size: 14px;"/>

            <Label text="Reporte generado:"
                   style="-fx-font-weight: bold; -fx-padding: 10 0 0 0;"/>

            <TextArea fx:id="txtReporteProgreso"
                      prefHeight="250"
                      wrapText="true"/>
        </VBox>
    </center>

</BorderPane>