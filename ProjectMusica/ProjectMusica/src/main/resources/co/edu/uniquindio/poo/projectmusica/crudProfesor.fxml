<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="co.edu.uniquindio.poo.projectmusica.controller.ProfesorViewController">

    <children>
        <VBox spacing="15" alignment="TOP_LEFT"
              AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20">

            <children>

                <Label text="Crear Reporte de Progreso"
                       style="-fx-font-size: 20px; -fx-font-weight: bold;" />

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Comentario:"/>
                        <TextField fx:id="txtComentario" prefWidth="250"
                                   promptText="Escribe el comentario..." />
                    </children>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Nota:"/>
                        <TextField fx:id="txtNota" prefWidth="100"
                                   promptText="Ej: 4.5" />
                    </children>
                </HBox>

                <HBox spacing="10" alignment="CENTER_LEFT">
                    <children>
                        <Label text="Fecha:"/>
                        <DatePicker fx:id="dpFecha"/>
                    </children>
                </HBox>

                <Button text="Crear Reporte"
                        onAction="#onCrearComentario"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />

                <Label text="Reporte Generado:"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;" />

                <TextArea fx:id="txtReporteProgreso"
                          prefHeight="250" prefWidth="400"
                          wrapText="true"
                          editable="false"/>
            </children>

        </VBox>
    </children>

</AnchorPane>